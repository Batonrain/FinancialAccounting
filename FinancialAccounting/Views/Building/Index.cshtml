@using FinancialAccounting.Models.Buildings
@model FinancialAccounting.Models.Buildings.ManageBuildingViewModel
@{
    ViewBag.Title = string.Format("Управление объектом '{0}'", Model.BuildingMainInfo.Name);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2 style="text-align:left;float:left;">@ViewBag.Title</h2>
        <h3 style="margin-left: 5px;text-align: right; float: right;">
            @Html.ActionLink("Редактировать описание объекта", "UpdateObject", "Building", routeValues: new { @buildingId = Model.BuildingMainInfo.Id }, htmlAttributes: new { @class = "btn btn-primary" })
        </h3>
        <h3 style="margin-left:5px;text-align:right;float:right;">
            @Html.ActionLink("Добавить подрядчика", "CreateContractorForObject", "Building", routeValues: new { @buildingId = Model.BuildingMainInfo.Id }, htmlAttributes: new { @class = "btn btn-primary" })
        </h3>
        <hr style="clear:both;" />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @Html.DisplayFor(m => m.BuildingMainInfo.Description)
    </div>
    <hr style="clear:both;" />
</div>

<div class="row">
    <table>
        <tr>
            <th style="text-align:center;">Название подрядчика</th>
            <th style="text-align:center;">Всего</th>
            <th style="text-align:center;">Наличные рассчёты</th>
            <th style="text-align:center;">Безналичные рассчёты</th>
            <th style="text-align:center;">Дата платежа</th>
        </tr>
        <tr>
            <td></td>
            <td>
                <table style="text-align:center;">
                    <tr>
                        <td style="width: 33%; font-weight: bold;">Всего должны</td>
                        <td style="width: 33%; font-weight: bold;">Оплачено</td>
                        <td style="width: 33%; font-weight: bold;">Остаток</td>
                    </tr>
                </table>
            </td>
            <td>
                <table style="text-align:center;">
                    <tr>
                        <td style="width: 33%; font-weight: bold;">Всего должны</td>
                        <td style="width: 33%; font-weight: bold;">Оплачено</td>
                        <td style="width: 33%; font-weight: bold;">Остаток</td>
                    </tr>
                </table>
            </td>
            <td>
                <table style="text-align:center;">
                    <tr>
                        <td style="width: 33%; font-weight: bold;">Всего должны</td>
                        <td style="width: 33%; font-weight: bold;">Оплачено</td>
                        <td style="width: 33%; font-weight: bold;">Остаток</td>
                    </tr>
                </table>
            </td>
            <td></td>
        </tr>
        @foreach (var contractor in @Model.Contractors)
        {
            <tr style="border-collapse: separate; border-spacing: 0 5px;">
                <td>
                    @Html.ActionLink(contractor.Name, "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>
                <td>
                    <table style="text-align:center;">
                        <tr>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.SummByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.PayedByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.NeedToPayByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                        </tr>
                    </table>
                </td>
                <td>
                    <table style="text-align:center;">
                        <tr>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.InCashSummByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.InCashPayedByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.InCashNeedToPayByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                        </tr>
                    </table>
                </td>
                <td>
                    <table style="text-align:center;">
                        <tr>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.InCashlessSummByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.InCashPayedByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                            <td>@Html.ActionLink(contractor.PaymentsSummary.InCashNeedToPayByContract.ToString("0000"), "ContractorPayments", "Payments", routeValues: new { @contractorId = contractor.Id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                        </tr>
                    </table>
                </td>
                <td>
                    @if (contractor.Status == Status.Green)
                    {
                        <label>@contractor.PlannedDate.ToShortDateString()</label>
                    }
                    @if (contractor.Status == Status.Yellow)
                    {
                        <label style="background-color: yellow;">@contractor.PlannedDate.ToShortDateString()</label>
                    }
                    @if (contractor.Status == Status.Red)
                    {
                        <label style="background-color: red;">@contractor.PlannedDate.ToShortDateString()</label>
                    }
                    @if (contractor.Status == Status.Green)
                    {
                    }
                </td>
            </tr>
        }
        <tr>
            <td><b>Итого:</b></td>
            <td>
                <table style="text-align:center;">
                    <tr>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.SummByContract).ToString("0000")</td>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.PayedByContract).ToString("0000")</td>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.NeedToPayByContract).ToString("0000")</td>
                    </tr>
                </table>
            </td>
            <td>
                <table style="text-align:center;">
                    <tr>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.InCashSummByContract).ToString("0000")</td>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.InCashPayedByContract).ToString("0000")</td>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.InCashNeedToPayByContract).ToString("0000")</td>
                    </tr>
                </table>
            </td>
            <td>
                <table style="text-align:center;">
                    <tr>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.InCashlessSummByContract).ToString("0000")</td>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.InCashlessPayedByContract).ToString("0000")</td>
                        <td>@Model.Contractors.Sum(c => c.PaymentsSummary.InCashlessNeedToPayByContract).ToString("0000")</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

