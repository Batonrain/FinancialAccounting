@model FinancialAccounting.Models.Contractors.UpdateContractorViewModel

@{
    ViewBag.Title = string.Format("Редактирование объекта '{0}'", Model.Name);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/datepickerToSet")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#simplestUsage').multiDatesPicker({
                minDate: 0,
                values: '@Model.RequriedDates '
            });
        });
    </script>
}
<link rel="stylesheet" type="text/css" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">


<div class="row">
    <div class="col-md-12">
        <h2 style="text-align:left;float:left;">@ViewBag.Title</h2>
        <h3 style="margin-left: 5px;text-align: right; float: right;">
            @Html.ActionLink("Удалить объект", "RemoveObject", "Building", routeValues: new { @buildingId = Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("UpdateContractor", "Building", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.BuildingObjectId)
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Descriptions, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Descriptions, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TotalCostsInCash, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.TotalCostsInCash, new { @class = "form-control", Value = String.Format("{0:0000}", Model.TotalCostsInCash) })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TotalCostsCashless, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.TotalCostsCashless, new { @class = "form-control", Value = String.Format("{0:0000}", Model.TotalCostsCashless) })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RequriedDates, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.RequriedDates, new { @class = "form-control", @id = "simplestUsage" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить изменения" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>
