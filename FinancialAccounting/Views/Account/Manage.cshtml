@using FinancialAccounting.Extensions
@model FinancialAccounting.Models.ManageUserViewModel

<h2 style="text-align:left;float:left;">@ViewBag.Title</h2>
<h3 style="text-align:right;float:right;">@Html.ActionLink("Удалить пользователя", "Remove", "Account", routeValues: new { @userId = Model.UserId }, htmlAttributes: new { @class = "btn btn-primary" })</h3>
<hr style="clear:both;" />

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.UserId)
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(m => m.Role)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить изменения" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
